<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.StartPageController">
   <children>
      <ScrollPane hbarPolicy="NEVER" layoutX="400.0" prefHeight="200.0" prefWidth="200.0" style="-fx-background: rgb(50, 50, 50); -fx-background-color: rgb(24, 24, 27);" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="50.0">
         <content>
            <VBox fx:id="GameButtonBox" alignment="CENTER" prefWidth="200.0" spacing="10.0">
               <padding>
                  <Insets right="10.0" top="10.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" layoutX="400.0" layoutY="2.0" prefHeight="50.0" prefWidth="200.0" spacing="30.0" style="-fx-background-color: rgb(50, 50, 50);" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Button mnemonicParsing="false" onMouseClicked="#addGame" style="-fx-text-fill: rgb(255, 255, 255); -fx-background-color: rgb(142,255,0); -fx-background-radius: 20;" text="➕" />
            <Button mnemonicParsing="false" onMouseClicked="#removeGame" style="-fx-text-fill: rgb(255, 255, 255); -fx-background-color: rgb(255,0,0); -fx-background-radius: 20;" text="➖" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </HBox>
      <AnchorPane fx:id="StartImagePane" minWidth="400.0" prefHeight="200.0" prefWidth="400.0" styleClass="startPicture" stylesheets="@../CSS/style.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
